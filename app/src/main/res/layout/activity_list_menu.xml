<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
    tools:context="com.frimapp.smartmath.ListMenu"
    android:background="#eeeeee">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#00aaff"
        android:id="@+id/relativeLayout"
        android:gravity="top|left|right"
        android:longClickable="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imageView"
            android:src="@drawable/koin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/textView11"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignBaseline="@+id/textView12"
            android:layout_alignBottom="@+id/textView12"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_toStartOf="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NAMA"
            android:id="@+id/textView12"
            android:textSize="21dp"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/Level"
            android:layout_toEndOf="@+id/Level" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/Level"
            android:textColor="#000000"
            android:background="@drawable/level"
            android:gravity="center"
            android:longClickable="false"
            android:text="0"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/expandableListView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/imageButton"
        android:layout_below="@+id/relativeLayout" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/imageButton"
        android:src="@drawable/buttonback"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:onClick="Back"
        android:nestedScrollingEnabled="false"
        android:scaleType="centerInside"
        android:scrollIndicators="top"
        android:foregroundGravity="center" />


</RelativeLayout>
